<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="Hamburger" package="Hamburger" version="1.0.0" company="Arreche-Piaggio" />
	
	<!-- output -->
	<app main="Main" file="Hamburger" path="bin" />
	
	<window background="#000000" fps="60" />
	<window width="1920" height="1080" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	<app swf-version="11.8" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	<haxelib name="flixel" />
	<haxelib name="flixel-addons" />
	<haxelib name="swf" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
	<library path="assets/inicio.swf" id="swf-library" type="swf" preload="true" />
	<assets path="assets/img" rename="img" />
	<assets path="assets/sound" rename="sound" />
	<assets path="assets/config" rename="config" include="*.csv" />
	<assets path="assets/fonts" rename="fonts" />
	<!-- optimize output-->
	
	<haxeflag name="-dce full" /> 
	
</project>